.list
  margin-bottom 20px
  opacity 0
  height 0
.show_list
  animation: showList 0.4s linear forwards
.hide_list
  animation: hideList 0.4s linear
@keyframes showList
  0% {
    opacity: 0;
    transform: translateY(-20px);
    height 0
  }
  100% {
    opacity: 1;
    transform: translateY(0px);
    height 100%
  }
@keyframes hideList
  0% {
    opacity: 1;
    transform: translateY(0px);
    height 100%
  }
  100% {
    opacity: 0;
    transform: translateY(-20px);
    height 0
  }
